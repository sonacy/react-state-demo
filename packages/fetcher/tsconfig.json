{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "rootDirs": []
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": ["node_modules", "public", "dist"],
}